<!--
New Enter Latency = orig rpm_sync enter latency + enter latency of removed vdd dig
                  = 28000 + 5100
                  = 33100
New Exit Latency = orig rpm_sync exit latency + exit latency of removed vdd dig
                  = 26000 + 5100
                  = 31100				  
-->

<LPRDefinition>
  <LPR Name="rpm" CoreMask="0xFFFFFFFF" InitFn="rpm_sync_init" ProfileFreq="576000">
    <Mode Name="sync"
          Dependency="cpu_vdd + cxo"
          Order="BEFORE cpu_vdd"
          PowerSavings="100000,50"
          EnterLat="33200,542"
          ExitLat="31100,4040"
          Backoff="1000,5040"
          EnterFn="rpm_sync_enter"
          ExitFn="rpm_sync_exit"
          >
    </Mode>
    <Mode Name="sync_only"
          Dependency="cpu_vdd.pc_l2_tcm_ret"
          Order="BEFORE cpu_vdd.pc_l2_tcm_ret"
          PowerSavings="900000,50"
          EnterLat="33100,542"
          ExitLat="31100,4040"
          Backoff="1000,5040"
          EnterFn="rpm_sync_enter"
          ExitFn="rpm_sync_exit"
          >
    </Mode>

  </LPR>
</LPRDefinition>
